<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <h1>Đăng ký</h1>
    <div class="container col-8">
        <div class="row ">
            <form action="/auth/signup" method="POST">
                <div class="mb-3 row">
                    <label for="username" class="col-sm-2 col-form-label">Tên đăng nhập</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="username" name="username">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="password" class="col-sm-2 col-form-label">Mật khẩu</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                </div><div class="mb-3 row">
                    <label for="confirmPassword" class="col-sm-2 col-form-label">Nhập lại mật khẩu</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                    </div>
                </div>
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error">
                        <h1><%= errorMessage %></h1>
                    </div>
                <% } %>
                <div class="mt-1 d-grid gap-2 col-6 mx-auto">
                    <input hidden type="text" name="_csrf" value="<%=csrfToken%>">
                    <button class="btn btn-primary" type="submit">Đăng ký
                    </button>
                </div>
            </form>
        </div>

    </div>

<%- include('../includes/end.ejs') %>