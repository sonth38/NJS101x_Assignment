<%- include('includes/head.ejs') %>
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <%- include('includes/checkin-checkout.ejs') %>
        <div class='form-start__wrapper show-form'>
            <form class="form-start" action="/check-in/start" method="POST">
                <div class="form-control">
                    <label for="name">Tên Nhân Viên</label>
                    <input class="input-disabled" disabled type="text" name="name" value="<%=staff.name%>">
                </div>
                <div class="form-control">
                    <label for="workPlace">Nơi Làm Việc</label>
                    <select name="workPlace" id="workPlace">
                        <option value="company">Công Ty</option>
                        <option value="home">Nhà</option>
                        <option value="customer">Khách Hàng</option>
                    </select>
                </div>
                <input type="hidden" name="mode" value="start">
                <button type="submit" class="btn-custom-form">Điểm Danh</button>
            </form>
        </div>
    </main>

<%- include('includes/end.ejs') %>