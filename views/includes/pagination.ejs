<section class="pagination">
    <% if (currentPage != 1 && previousPage != 1) { %>
        <a href="?page=1&line=<%=line%>">1</a>
    <% } %>
    <% if (hasPreviousPage) { %>
        <a href="?page=<%= previousPage %>&line=<%=line%>"><%= previousPage %></a>
    <% } %>
    <a class="active" href="?page=<%= currentPage %>&line=<%=line%>"><%= currentPage %></a>
    <% if (hasNextPage) { %>
        <a href="?page=<%= nextPage %>&line=<%=line%>"><%= nextPage %></a>
    <% } %>
    <% if (lastPage != currentPage && nextPage != lastPage) { %>
        <a href="?page=<%= lastPage %>&line=<%=line%>"><%= lastPage %></a>
    <% } %>
    <div class="mt-3">
        <label for="line">Số dòng hiện thị: </label>
        <select id="line" name="line" onchange="location = this.value;">
            <option value="?page=1&line=1">1</option>
            <option value="?page=1&line=2">2</option>
            <option value="?page=1&line=5">5</option>
        </select>
    </div>
</section>